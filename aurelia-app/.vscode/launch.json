{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Aurelia CLI",
      "program": "${workspaceFolder}/node_modules/aurelia-cli/bin/aurelia-cli.js",
      "console": "integratedTerminal",
      "args": [
        "run"
      ],
      "serverReadyAction":{
        "action": "debugWithChrome",
        "pattern": "Application Available At: http://localhost:([0-9]+)",
      },
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
